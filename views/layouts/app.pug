doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel='icon', href='/favicon.ico')
        title KidsConsultant #{title}
        link(rel="stylesheet", href="/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/dist/css/materialize.min.css")
        link(rel='stylesheet', href='/css/icofont.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block css
    body
        nav.nav.white.pink-text
            div.nav-wrapper.container
                a.brand-logo.pink-text.left
                    img(src="/img/logo.jpg", style="width:50px")
                    spam.hide-on-med-and-down Consultant
                ul#auth-nav.right.hide-on-med-and-down
                    if (!isAuthenticated)
                        a.waves-effect.waves-light(href="/auth/login") Login
                            span.icofont.icofont-sign-in.ml-2
                        a.odd.waves-effect.waves-light(href="/auth/signup") Register
                            span.icofont.ml-2.icofont-ui-add
                    else
                        a.dropdown-trigger.none(href='#', data-target='dropdown1')=auth.name
                            img.ml-2.rounded-circle(src=auth.photo, style="width:50px")
                ul#dropdown1.dropdown-content
                        li
                            a.text-center(href="/profile")
                                span.icofont.icofont-ui-user
                                =' Profile'
                        li
                            a.text-center(href="/auth/logout")
                                span.icofont.icofont-sign-out
                                =' Log Out'
                ul#nav-mobile.right.hide-on-med-and-down
                    li
                        a.black-text(href="/pricing") Pricing
                a(href="#" data-target="mobile-demo" class="sidenav-trigger right black-text")
                    i.icofont.icofont-navigation-menu

        include ../components/sidenav
        block content
        script(src='/dist/js/jq.js')
        script(src='/dist/js/bootstrap.min.js')
        script(src='/dist/js/materialize.min.js')
        script(src='/dist/js/html2canvas.min.js')
        script(src="/js/app.js")
        block js