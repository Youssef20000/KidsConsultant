extends layouts/app

block content
    div.main.container
        div.pl-4.pr-4.mt-4.white
            h5.alert.alert-success Transaction Succeeded
            div.row
                div.col-md-9
                    h4.title
                        span.icofont.icofont-pay.green-text
                        = " Subscription Receipt"
                div.col-md-3
                    a#download.btn.blue.white-text.mt-4(href="/profile/payment/download/#{invoice.invoiceNum}")
                        ="Download Invoice"
            hr
            div#imageDIV.row.mx-4
                div.col-md-5
                    img.mt-4.img-fluid(style="width:100%", src="/img/icons/pay.png")
                div.col-md-7
                    div.content.ml-md-4.mt-md-4.pl-md-4(style="font-size:22px;  word-break: break-word;")
                        p Name:  #{auth.name}
                        p Email:
                            i.ml-2.blue-text #{auth.email}
                        hr.m-2
                        p Invoice Number: #{invoice.invoiceNum}
                        p Subscription Plane: Monthly
                        P Payment Method : #{invoice.paidBy}
                        p Transaction Number: #{invoice.ppTransaction}
                        p Total Price : #{process.env.Sub_price}$
