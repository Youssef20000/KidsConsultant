extends layouts/app

block content
    div.main.container
        div.pl-4.pr-4.mt-4.white
            h5.alert.alert-success Successfully Subscribed
            a#download.btn.blue.white-text.m-2.position-absolute(href="#" style="z-index:2;right:250px;font-size:20px")
                ="Download Invoice"
            div#imageDIV.row.mx-4
                div.col-md-7
                    h4.title
                      span.icofont.icofont-pay.green-text
                      = " Subscription Receipt"
                    hr
                    div.content.ml-4.mt-4.pl-4(style="font-size:22px")
                        p Name:  #{auth.name}
                        p Email:
                            i.ml-2.blue-text #{auth.email}
                        hr.m-2
                        p Invoice Number: #{invoice.invoiceNum}
                        p Subscription Plane: Monthly
                div.col-md-5
                    img.mt-4.img-fluid(style="height:300px;width:100%", src="/img/icons/pay.png")

                div.col-md-12
                    div.content.ml-4.mt-4.pl-4(style="font-size:22px")
                        P Payment Method : #{invoice.paidBy}
                        p Transaction Number: #{invoice.ppTransaction}
                        p Total Price : #{process.env.Sub_price}$
